<odoo>
  <data>
  
  <!-- First my module -->
      <record model="ir.ui.view" id="employee_form">
      <field name="name">employee_form</field>
      <field name="model">employee.employee</field>
      <field name="arch" type="xml">
        <!-- <group> -->
          <form>
           <sheet>
             <group>
            <field name="name"/>
            <field name="age"/>
            </group>
          </sheet>
          </form>
      <!-- </group> -->
      </field>
    </record>

<!-- tree view of mymodule -->
<record model="ir.ui.view" id="employee_tree">
      <field name="name">employee_tree</field>
      <field name="model">employee.employee</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

<!-- action for my moduule -->
    
    <record id="employee_employee_action" model="ir.actions.act_window">
        <field name="name">Employee Create</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.employee</field>
        <field name="view_mode">tree,form</field>
    </record>


<!-- inherited product template view -->
    <record id="product_template_form_view_inherited" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                <!-- <xpath expr="//field[@class='list_price']" position="after">
                    <field name="emp_name"/>
                </xpath> -->

                  <field name="list_price" position="after">
                   <label for="emp_name" string="Employee name"/>
                    <div>
                     <field name="emp_name" type='row' />
                     </div>
                </field>
                </data>
            </field>
        </record>


    <!-- Top menu item -->

    <menuitem name="Odoo llearning" id="odoo_learning.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="odoo_learning.menu_1" parent="odoo_learning.menu_root"/>
    
               <menuitem name="Employee" id="employee_menu" parent="odoo_learning.menu_1"
              action="employee_employee_action"/>
       

  </data>
</odoo>