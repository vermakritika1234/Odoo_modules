<!--Basic Information-->

<!--Department information-->
      <record id="hrm_department_form" model="ir.ui.view">
        <field name="name">hrm_department</field>
        <field name="model">hrm_department</field>
        <field name="arch" type="xml">
            <form string="Department">
            <sheet>
              <group>
                  <field name="department"/>
              </group>
            </sheet>
            </form>
          </field>
        </record>

    <record id="hrm_department_tree" model="ir.ui.view">
        <field name="name">hrm_department</field>
        <field name="model">hrm_department</field>
        <field name="arch" type="xml">
            <tree string="department Values">
             <!-- <field name="id" /> -->
               <field name="department"/>
            </tree>
        </field>
    </record>


    <record id="hrm_department_action" model="ir.actions.act_window">
        <field name="name">hrm_department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hrm_department</field>
        <field name="view_mode">tree,form</field>
    </record>


