<odoo>
  <data>
<!--Basic Information-->
      <record id="form_profile_information" model="ir.ui.view">
        <field name="name">profile.info.form</field>
        <field name="model">profile_info</field>
        <field name="arch" type="xml">
            <form string="Product Attribute">
          
            <sheet name='User Profile'>
              <group>
                  <group>
                    <field name="name"/>
                    <field name="designation"/>                    
                    <field name="department" /> 
                    <field name="age" />
                    <field name="adhar" />
                      <field name="guidance_name"  />
                      <field name="guidance_phone"  />
                  </group>

                   <group>
                     <field name="photo" widget="image" class="oe_avatar"/>
                     <field name="salary_inhand" />
                    <field name="salary_gross" />
                    <field name="phone" />
                   </group>

                   <notebook>
                     <page string="Employee Old Experience">
                     
                        <group>
                          <field name="experience"/>
                          <field name="year_n_month"/>
                          <field name="company_name"/>
                          </group>
                          <group>
                          <field name="profile"/>
                          <field name="salary"/>
                          <field name="adhar"/>
              
                       </group>
                     </page>

                       <page string="Employee Skills Experience">
                     
                        <group>
                          <field name="graduation"/>
                          <field name="skills"/>
                          <field name="additional_skill"/>
                          </group>
                          <group>
                          <field name="course"/>
                          <field name="certificates"/>              
                       </group>
                     </page>
                   </notebook>

                

              </group>


            </sheet>
            </form>
        </field>
    </record>

    <record id="tree_profile_information" model="ir.ui.view">
        <field name="name">profile.info.tree</field>
        <field name="model">profile_info</field>
        <field name="arch" type="xml">
            <tree string="Variant Values">
             <field name="name" />
            <field name="designation" />
             <field name="department" /> 
            <field name="age" />
            <field name="adhar" />
            <field name="experience"/>
            <field name="profile"/>

 
            </tree>
        </field>
    </record>


    <record id="profile_info_action" model="ir.actions.act_window">
        <field name="name">User profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">profile_info</field>
        <field name="view_mode">tree,form</field>
    </record>


<!--Department information-->
      <record id="hrm_department" model="ir.ui.view">
        <field name="name">hrm_department</field>
        <field name="model">hrm_department</field>
        <field name="arch" type="xml">
            <form string="Department">
              <group>
                <sheet>
                  <field name="department"/>
                </sheet>
              </group>
            </form>
          </field>
        </record>
